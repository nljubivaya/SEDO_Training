<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:SEDO_Training.ViewModels"
			 x:DataType="vm:EditUserVM"
			 x:Class="SEDO_Training.EditUser">
	
	<Border BorderThickness="2" BorderBrush="#007ACC" Padding="20" CornerRadius="10" Margin="20" Background="#F7F7F7">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Stretch">
				<Button Command="{Binding ToLast}" Content="Назад" Margin="10" HorizontalAlignment="Right" Background="#007ACC"
						Foreground="White" FontWeight="Bold"/>

			</StackPanel>
			<ScrollViewer Grid.Row="1">
				<StackPanel>
					<TextBlock Text="Редактирование пользователя" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
					<TextBlock Text="{Binding NewU.Login}"></TextBlock>
					<TextBlock Text="{Binding NewU.Password}"></TextBlock>
					
					<!--<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
						<TextBlock Margin="10" Text="Выберите роль " FontWeight="Bold"></TextBlock>
						<ComboBox Margin="5" HorizontalAlignment="Left" ItemsSource="{Binding Roles}" SelectedItem="{Binding NewU.RoleNavigation}">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Role1}"></TextBlock>
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</StackPanel>-->
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Border>
</UserControl>

